#backtick 1 1 1 sh -c 'ps -o cmd= -p $(screen -ls | grep $(screen -Q windows | head -n 1 | cut -f1) | awk "{print \$1}" | cut -d"." -f1)'
#backtick 1 60 0 echo -n "§"
##backtick 1 60 0 echo -n "foo"
#backtick 1 1 1 bash -c 'ps -o cmd= -p $$'
#backtick 1 1 1 bash -c 'ps -o cmd= -p $(pgrep -f "^SCREEN")'
#backtick 1 1 1 bash -c 'echo $(pwd | sed "s|^$HOME|~|")'
#backtick 2 1 1 bash -c 'ps -o cmd= -p $(pgrep -f "^SCREEN")'

windowlist title '     %{G}%H %{d}: %{C}%S%{d}%=CPU averages [1m 5m 15m] [%l]'
#windowlist string '%?%F%{.R.}%?%3n %`%t`%? [%h]%?'
#windowlist string "%{b}%3n)%{6} %1` > %h %=%f"
windowlist string "%{b}%3n)%{6} %h %=%f"



silencewait 600

rendition monitor =s
rendition bell =
rendition silence =u
rendition so =b
