
# Source default screen settings
source .screenrc

# Create shell screens
screen -h 4096  # 0
screen -h 4096  # 1
screen          # 2
screen          # 3
screen          # 4
screen          # 5
screen          # 6
screen          # 7
screen          # 8
screen          # 9
screen          # 10

# Set up screens
at 0 stuff "clear^M"
at 1 stuff "sush^Mclear^M^M^M"
at 2 stuff "clear^Mcd /srv/salt^Mla^M"
at 3 stuff "clear^Mcd /srv/salt^Mla^M"
at 4 stuff "clear^Mcd /srv/pillar^Mla^M"
at 5 stuff "clear^Mcd /srv/pillar^Mla^M"
at 6 stuff "clear^Mcd /srv/formulas^Mla^M"
at 7 stuff "clear^Mcd /srv/formulas^Mla^M"
at 8 stuff "clear^Mcd /etc/salt^Mla^M"

# Return to the first screen
select 1
